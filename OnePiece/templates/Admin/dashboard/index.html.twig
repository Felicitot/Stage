{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord Admin{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
.dashboard {
    padding: 3rem;
    background: #f8f9fa;
    font-family: 'Montserrat', sans-serif;
}

.card {
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}

.card-title {
    color: #004aad;
    font-weight: 700;
}

.chart-container {
    background: #fff;
    border-radius: 15px;
    padding: 2rem;
    margin-top: 2rem;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
}

</style>
{% endblock %}

{% block body %}
<section class="dashboard container">
    <h1 class="text-center mb-4 gradient-text">üìä Tableau de Bord Administrateur</h1>

    <div class="row text-center mb-4">
        <div class="col-md-4">
            <div class="card p-4">
                <h3 class="card-title">Nombre de r√¥les</h3>
                <p class="display-5 text-primary">{{ totalRoles }}</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4">
                <h3 class="card-title">Demandes en attente</h3>
                <p class="display-5 text-warning">{{ pendingRequests }}</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4">
                <h3 class="card-title">Applications</h3>
                <p class="display-5 text-success">{{ appNames|length }}</p>
            </div>
        </div>
    </div>

    <div class="chart-container">
        <h3 class="text-center mb-3">Applications les plus utilis√©es</h3>
        <canvas id="appsChart" height="100"></canvas>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const ctx = document.getElementById('appsChart');
new Chart(ctx, {
    type: 'bar',
    data: {
        labels: {{ appNames|raw }},
        datasets: [{
            label: 'Nombre de r√¥les associ√©s',
            data: {{ roleCounts|raw }},
            backgroundColor: [
                '#004aad',
                '#d4af37',
                '#4CAF50',
                '#FF9800',
                '#2196F3'
            ],
            borderRadius: 10
        }]
    },
    options: {
        responsive: true,
        scales: {
            y: { beginAtZero: true }
        },
        plugins: {
            legend: { display: false },
            title: {
                display: true,
                text: 'Top 5 des applications les plus li√©es aux r√¥les',
                font: { size: 18 }
            }
        }
    }
});
</script>
{% endblock %}
