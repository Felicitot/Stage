{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

<style>
body { font-family: 'Montserrat', sans-serif; background-color: #ffffff; }
.login-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}
.login-card {
    border: none;
    border-radius: 15px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    max-width: 700px;
    width: 100%;
    animation: fadeIn 0.8s ease-in-out;
}
.login-left {
    padding: 3rem 2rem;
    background-color: #fff;
}
.gradient-text {
    background: linear-gradient(90deg, #004aad, #d4af37);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 700;
    font-size: 28px;
}
.btn-purple {
    background-color: #004aad; color: white;
    border-radius: 30px; padding: 10px 25px;
}
.btn-purple:hover { background-color: #00398a; }
.form-control { border-radius: 30px; }
</style>
{% endblock %}

{% block body %}
<section class="login-section">
    <div class="login-card">
        <div class="login-left">
            <h2 class="text-center ">Créer un nouveau mot de passe</h2>

            {% for flash in app.flashes('error') %}
                <div class="alert alert-danger text-center">{{ flash }}</div>
            {% endfor %}
            {% for flash in app.flashes('success') %}
                <div class="alert alert-success text-center">{{ flash }}</div>
            {% endfor %}

            <form method="post" action="{{ path('app_reset_password', {'piece': piece}) }}" class="animate__animated animate__fadeInUp">

                <div class="mb-3">
                    <input type="password" name="MotDePasse" class="form-control" placeholder="Nouveau mot de passe" required>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-purple">Mettre à jour</button>
                </div>
            </form>
        </div>
    </div>
</section>
{% endblock %}
