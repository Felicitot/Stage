{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

<style>
body {
    font-family: 'Montserrat', sans-serif;
    background-color: #ffffff;
}
.login-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}
.login-card {
    border: none;
    border-radius: 15px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    max-width: 900px;
    width: 100%;
    display: flex;
    animation: fadeIn 0.8s ease-in-out;
}
.login-left, .login-right {
    padding: 3rem 2rem;
    flex: 1;
}
.login-left { background-color: #fff; }
.login-right {
    background-color: #f8f9fa;
    border-left: 3px solid #d4af37;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
}
.gradient-text {
    background: linear-gradient(90deg, #004aad, #d4af37);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 700;
    font-size: 28px;
}
.form-control { border-radius: 30px; }
.btn-purple {
    background-color: #004aad;
    border: none;
    color: white;
    border-radius: 30px;
    padding: 10px 25px;
}
.btn-purple:hover { background-color: #00398a; }
.btn-outline-purple {
    color: #004aad;
    border: 2px solid #004aad;
    border-radius: 30px;
    padding: 10px 25px;
}
.btn-outline-purple:hover { background-color: #004aad; color: #fff; }

@media (max-width: 768px) {
    .login-card { flex-direction: column; }
    .login-right {
        border-left: none;
        border-top: 3px solid #d4af37;
    }
}
</style>
{% endblock %}

{% block body %}
<section class="login-section">
    <div class="login-card">
        <div class="login-left">
            <h2 class="text-center text-purple fw-bold mb-4">Vérification de votre identité</h2>

            {% for flash in app.flashes('error') %}
                <div class="alert alert-danger text-center">{{ flash }}</div>
            {% endfor %}

            <form method="post" action="{{ path('app_verif_identite') }}" class="animate__animated animate__fadeInUp">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('verif_identite') }}">

                <div class="mb-3">
                    <input type="text" name="PieceId" class="form-control" placeholder="Numéro CIN" required>
                </div>

                <div class="mb-3">
                    <input type="email" name="email" class="form-control" placeholder="Adresse email" required>
                </div>

                <div class="mb-3">
                    <input type="text" name="numTel" class="form-control" placeholder="Numéro de téléphone" required>
                </div>

                <div class="mb-3">
                    <label class="mb-1">Date de naissance :</label>
                    <input type="date" name="dateNaissance" class="form-control" required>
                </div>

                <div class="mb-3">
                    <input type="text" name="cin" class="form-control" placeholder="Numéro CIN" required>
                </div>

                <div class="mb-3">
                    <label class="mb-1">Date de délivrance CIN :</label>
                    <input type="date" name="dateDelivrance" class="form-control" required>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-purple">Vérifier les informations</button>
                </div>
            </form>
        </div>

        <div class="login-right">
            <h3 class="gradient-text mb-3">Sécurité</h3>
            <p class="mb-4">Veuillez confirmer votre identité avant de modifier votre mot de passe.</p>
            <a href="{{ path('app_connexion') }}" class="btn btn-outline-purple">Se connecter</a>
        </div>
    </div>
</section>
{% endblock %}
