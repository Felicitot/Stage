

{% block stylesheets %}
    <!-- Bootstrap 5 & Google Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #ffffff;
        }

        .login-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .login-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 900px;
            width: 100%;
            display: flex;
            animation: fadeIn 0.8s ease-in-out;
        }

        .login-left, .login-right {
            padding: 3rem 2rem;
            flex: 1;
        }

        .login-left {
            background-color: #fff;
        }

        .login-right {
            background-color: #f8f9fa;
            border-left: 3px solid #d4af37;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .gradient-text {
            background: linear-gradient(90deg, #004aad, #d4af37);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 700;
            font-size: 28px;
        }

        .form-control {
            border-radius: 30px;
        }

        .btn-purple {
            background-color: #004aad;
            border: none;
            color: white;
            border-radius: 30px;
            padding: 10px 25px;
            transition: background-color 0.3s ease;
        }

        .btn-purple:hover {
            background-color: #004aad;
        }

        .btn-outline-purple {
            color:#004aad;
            border: 2px solid #004aad;
            border-radius: 30px;
            padding: 10px 25px;
            transition: 0.3s ease;
            font-weight: 600;
        }

        .btn-outline-purple:hover {
            background-color:#004aad;
            color: #fff;
        }

        .login-link {
            font-size: 14px;
            color: #004aad;
            text-decoration: none;
        }

        .login-link:hover {
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .login-card {
                flex-direction: column;
            }

            .login-right {
                border-left: none;
                border-top: 3px solid #d4af37;
                padding: 2rem 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<section class="login-section">
    <div class="login-card">
        <!-- Left Side: Login Form -->
        <div class="login-left">
            <h2 class="text-center text-purple fw-bold mb-4">Connexion</h2>

            {% if error %}
                <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_connexion') }}" method="post" class="animate__animated animate__fadeInUp">
                <div class="mb-3">
                    <input type="text" name="_username" class="form-control" placeholder="Numéro de pièce d'identité" required>
                </div>
                <div class="mb-3">
                    <input type="password" name="_password" class="form-control" placeholder="Mot de passe" required>
                </div>
                <input type="hidden" name="_target_path" value="{{ path('app_compte') }}"/>
                <div class="g-recaptcha mb-3" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI"></div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-purple">Se connecter</button>
                </div>

                <div class="text-center mt-3">
                    <a href="{{ path('app_verif_identite') }}" class="login-link">Mot de passe oublié ?</a>
                </div>
            </form>
            <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        </div>

        <!-- Right Side: Welcome -->
        <div class="login-right">
            <h3 class="gradient-text mb-3">Bonjour !</h3>
            <p class="mb-4">Veuillez vous inscrire si vous n'avez pas encore de compte</p>
            <a href="{{ path('app_inscription') }}" class="btn btn-outline-purple">S'inscrire</a>
        </div>
    </div>
</section>
{% endblock %}
